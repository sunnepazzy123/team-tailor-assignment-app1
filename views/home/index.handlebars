<h1 class="text-center">{{title}}</h1>

<form class="mb-4" action="/api/users" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name"  >
    </div>
     <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email"  >
    </div>
    <input type="submit" value="Add User" class="btn btn-primary btn-block mt-3" >
</form>

<h4>Users List</h4>
<ul class="list-group">
    {{#each users}}
        <li class="list-group-item">{{name}}: {{email}}</li>
    {{/each}}
</ul>

<a href="/api/users" class="btn btn-warning mt-3">Visit API</a>




